        <item name="colorAccent">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorForeground">@android:color/holo_orange_dark</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorPrimaryInverse">@android:color/black</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_red_light</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
